<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home_style.css">
    <title>MY Name</title>
</head>
<body>
    <div class="container">

        <div class="heading">TODO APP</div>
    <!-- form started  -->
    <form action="/task_list" method="get">
        <div class="description">
            <div class="div-header-font">DESCRIPTION</div>
            <input type="text" name="user_description" placeholder="What do you need to do?" class="unset_decoration">
        </div>
        
        <div class="width-100pcnt display-flex-btwnSpace add-bottom-border">
            <div class="category width-50pcnt">
                <div class="div-header-font">CATEGORY</div>
                <!-- <form action="#"> -->

                        <select name="choose_category">
                            <option value="select">choose a category</option>
                            <option value="personal">personal</option>
                            <option value="work">work</option>
                            <option value="school">school</option>
                            <option value="cleaning">cleaning</option>
                            <option value="others">others</option>
                        </select>

                <!-- </form> -->
            </div>

            <div class="due-date width-50pcnt">
                <div class="div-header-font">DUE-DATE</div>
                <input type="date" name="user_date" class="unset_decoration">
            </div>
        </div>
        <div class="display-flex-center">
            <button type ="submit" value="submit" class="add-task">ADD TASK</button>
            <button class="delete-task">DELETE TASK</button>
        </div>
    </form>
    <!-- form ended -->
        
        <ul class="user-list">
            <% for(let eachTask of task_list) {%>
                <hr>
                <input type="checkbox" name="task_status" class="inline-class">
                <li class="inline-class"> <%= eachTask %></li>
                <div class="tag_category inline-class">SCHOOL</div>
            <%}%>
        </ul>
    </div>
</body>
</html>